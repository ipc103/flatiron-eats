<h1><%= @restaurant.name %></h1>

<%= @restaurant.address_line1 %></br>
<%= @restaurant.address_line2 %></br>
<%= @restaurant.phone %></br>

<% if @restaurant.menu %>
	<a href="<%= @restaurant.menu %>">Menu</a>
<% end %> </br>

<h4>Reviews: </h4>
<% @restaurant.reviews.each do |f| %>
<%= "#{f.rating} - #{f.comment}" %></br>
<% end %>

<%= form_tag(new_meal_path, method: :get) %>
<%= hidden_field_tag 'restaurant_id', @restaurant.id %>
<%= submit_tag "Make a New Meal" %>
