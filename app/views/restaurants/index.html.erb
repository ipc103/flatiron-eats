<div class="main-container">
  <div class="container-fluid">
    <div class="spacer">
      <div class="row">
        <button class="btn-info" id="category-search">Display Search Options</button></br></br>
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
          <div class="blog" id="search-boxes">
            <div class="blog-body">
              <%= form_tag(category_search_path, remote: true) do %>
                <div class="input-group">
                <% @categories.each do |category| %>
                    <div class="squared-check">
                      <%= check_box_tag("categories[]", category.id, false, :id => "#{category.id}") %>
                      <label for="<%= category.id %>"></label>
                      <div class="cb-label">
                        <%= category.name %>
                      </div><!-- cb-label -->
                    </div><!-- squared-check -->
                    <% end %>
                    <%= submit_tag "Search", :class => "btn btn-default" %>
                <% end %>
                </div> <!-- input group -->
              </div>
          </div>
        </div>
        </br></br>

        <div class="col-md-9 col-sm-9 col-xs-9" id="right-border-bar"> <!-- col-sm-12 -->
          <div class="blog">
            <div class="blog-header">
              <h5 class="blog-title">Restaurants Around Flatiron</h5>
            </div>
            <div class="blog-body">
              <div id="map-canvas"></div>
            </div>
          </div>
        </div>
       <%= render "/restaurants/top_rated" %>
      </div><!-- row -->
    </div><!-- spacer -->
  </div><!-- container-fluid -->
</div><!-- main-container -->








