<%= form_for @meal do |f| %>
<%= f.label :name %>
<%= f.text_field :name %>
<% if @restaurant %>
<%= f.collection_select :restaurant_id, Restaurant.order(:name),:id, :name, include_blank: true, selected: @restaurant.id%>
<% else %>
<%= f.collection_select :restaurant_id, Restaurant.order(:name),:id, :name, include_blank: true %>
<% end %>
<%= f.hidden_field :host_id, value: current_user.id %>
<%= f.datetime_select :date, value: Time.now%>
<%= f.select :meal_type, ['Breakfast', 'Lunch', "Dinner"] %>
<%= f.submit %>
<% end %>
