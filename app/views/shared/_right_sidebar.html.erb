<div class="right-sidebar col-md-3">
  <div class="add-on clearfix">
    <h4>Upcoming Meals</h4>
      <div class="add-on-wrapper">
        <% @meals.each do |meal| %>
          <h5>
            <%= "#{meal.name} at #{meal.restaurant.name}"%>
          </h5>
          <ul class="articles">
            <li>hosted by <%=link_to meal.host.name, user_path(meal.host)%></li>
            <li><%= meal.date.strftime("%A, %B %d, %Y at %l:%M %p") %></li>
            <li>
              <% if !meal.users.empty? %>
                Attendees:
                <ul>
                  <%meal.users.each do |user| %>
                    <li><%= user.name %></li>
                  <% end %>
                </ul>
              <% end %>

            <!-- buttons  -->
            <%= render partial: "shared/meal_buttons", locals: {meal: meal} %>

            </li>
          </ul>
        <% end %>
    </div>
  </div>
</div>