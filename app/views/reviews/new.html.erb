<div class="main-container">
  <div class="container-fluid">
    <div class="spacer">
      <div class="row">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12" > <!-- col-sm-12 -->
          <div class="blog">
            <div class="blog-header">
              <h5 class="blog-title">Leave a Review!</h5>
            </div>
            <div class="blog-body" style="height:400px;">
              <%= form_for @review, url: meal_reviews_path, html: {class: "bv-form", id: "movieForm"} do |f| %>
                
                <div class="row">
                  <div class="col-md-1">
                  <%= f.label :rating %>
                    <%= f.select :rating, [0,1,2,3,4,5], {selected: 'Lunch'}, {:class=>"form-control"} %>
                  </div>
                </div>
                
                <div class="row">
                  <div class="col-md-8">
                    <%= f.label :comment %>
                    <%= f.text_area :comment, :class => "form-control"%></br>
                  </div>
                </div>
               
       

                <div class="row">
                  <div class="col-md-4">
                    <%= f.submit "Submit", :class => "btn btn-default" %>
                  </div>
                </div>
              <% end %>
            </div>
          </div>
        </div>

      </div><!-- row -->
    </div><!-- spacer -->
  </div><!-- container-fluid -->
</div><!-- main-container -->










