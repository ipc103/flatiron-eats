<div class="main-container" style="margin: auto;">
  <div class="container-fluid">
    <div class="spacer">
      <div class="row">
        <div class="col-md-12 col-sm-12 col-xs-12"> 
          <div class="current-profile">
            <div class="user-bg">
            </div>
            <%= image_tag(@user.image, :class => "user-pic") %>
            <div class="user-details">
              <h4 class="user-name"><%= @user.name %></h4>
              <h5 class="description"></h5>
            </div>
            <div class="social-list">
              <div class="row">
                <div class="col-md-6 col-md-offset-3">
                  <div class="row">
                    <div class="class="col-md-3 col-sm-3 col-xs-3 center-align-text"">
                      <h3></h3>
                      <small></small>
                    </div>
                  </div>
                </div>
              </div>
            </div>

                <h3>Attending:</h3>
                <ul>
                <% @meals.each do |meal| %>
                  <li><%= link_to meal.name, meal %></li>
                  <% unless meal.users.include?(current_user) %>
                    <%= form_tag(create_user_meal_path, method: :post) %>
                    <%= hidden_field_tag 'meal_id', meal.id %>
                    <%= submit_tag "Join This Meal!" %>
                  <% end %>
                <% end %>
                </ul>

                <h3>Hosting:</h3>
                <ul>
                <% @events.each do |event| %>
                  <li><%= link_to event.name, event %></li>
                  <% unless event.users.include?(current_user) || event.host == current_user%>
                    <%= form_tag(create_user_meal_path, method: :post) %>
                    <%= hidden_field_tag 'meal_id', event.id %>
                    <%= submit_tag "Join This Meal!" %>
                  <% end %>
                <% end %>
                </ul>
          

            
          </div>
        </div>
      </div>
    </div>
  </div>        
</div>
